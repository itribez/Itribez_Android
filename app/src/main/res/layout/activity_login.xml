        app:layout_constraintTop_toTopOf="@+id/iconGoogle"
        app:layout_constraintBottom_toBottomOf="@id/iconGoogle"
        app:layout_constraintBottom_toTopOf="@id/btnSignUp"
        app:srcCompat="@drawable/fb_icon" />
-->

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:paddingHorizontal="52dp"
        app:layout_constraintTop_toBottomOf="@id/txtViewOR"
        android:text="@string/btn_create_new_account"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:cornerRadius="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>