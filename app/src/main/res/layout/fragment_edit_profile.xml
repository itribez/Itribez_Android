<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_profile_fragment">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".Fragments.EditProfileFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile Setup"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold|normal"/>
            </LinearLayout>



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/upload_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/profile"></de.hdodenhof.circleimageview.CircleImageView>

            <Button
                android:id="@+id/btnuploadpic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Picture"
                android:textAllCaps="false"
                android:background="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>
            
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Full Name"
              android:textSize="16sp"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="3dp"/>

            <EditText
                android:inputType="text"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:padding="5dp"
                android:background="@drawable/chat_edittext"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="3dp"/>

            <EditText
                android:inputType="text"
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:padding="5dp"
                android:background="@drawable/chat_edittext"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birth Date"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="3dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@drawable/chat_edittext">

                <EditText
                    android:id="@+id/birthdate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="3dp"
                    android:inputType="date"
                    android:padding="8dp"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/calendar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/calendar"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Gender"-->
<!--                android:textSize="16sp"-->
<!--                android:layout_marginTop="25dp"-->
<!--                android:layout_marginLeft="3dp"/>-->

<!--            <Spinner-->
<!--                android:id="@+id/genderspinner"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="45dp"-->
<!--                android:contextClickable="true" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="3dp"/>

            <EditText
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edbio"
                android:layout_marginLeft="3dp"
                android:padding="5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/chat_edittext"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="3dp"/>

            <EditText
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edcity"
                android:layout_marginLeft="3dp"
                android:padding="5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/chat_edittext"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/btnsave"
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="16sp"
                android:background="@drawable/round_btn"
                android:textColor="@color/white" />

        </LinearLayout>
</LinearLayout>
</ScrollView>